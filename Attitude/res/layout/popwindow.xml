<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weixinPopBg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CC4e5a6b" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/weixinPopImg01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_margin="5dip"
                android:scaleType="fitCenter"
                android:src="@drawable/weixin_pop_weixin" />
             <TextView
                android:id="@+id/weixinPopText01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/show_text_14"
                android:text="分享给好友" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="10dip"
            android:orientation="vertical" >

            <ImageView
                 android:id="@+id/weixinPopImg02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                 android:scaleType="fitCenter"
                 android:src="@drawable/weixin_pop_pengyouquan" />
              <TextView
                android:id="@+id/weixinPopText02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="@dimen/show_text_14"
                android:text="分享朋友圈" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>